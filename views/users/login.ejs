<% layout('/layouts/boilerPlate') %>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h3>Login</h3>
            <form action="/login" method="post" class="needs-validation" novalidate>
                
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label> <!-- Corrected label for clarity -->
                    <input type="text" name="username" id="username" placeholder="Enter your username" required class="form-control"> <!-- Changed ID to match name -->
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" placeholder="Enter your password" required class="form-control">
                </div>

                <button class="btn btn-dark">Login</button>
            </form>
        </div>
    </div>
</body>
