<%layout('/layouts/boilerPlate')%>
<body>
 

  
    <h2>All listing</h2>
   
    <div  class="row   row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
    <% for(let listing of listings) { %>
     
    <a href="http:/listings/<%=listing._id%> " class="listing-link">
      <div class="card col card-listing" >
        <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
        <div class="card-img-overlay"></div>
        
        <div class="card-body">

           <b><p  class="card-text"><%=listing.title%></b>

          <br>

          &#8377;<%= listing.price.toLocaleString('en-IN') %> per day
          </p>
        </div>
      </div>


    </a>

      <% } %>
    </div>


  

      
      
    
</body>
